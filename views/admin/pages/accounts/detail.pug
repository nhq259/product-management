extends ../../layouts/default.pug

block main 
  if (account.fullName)
    h1(class="mb-4") #{account.fullName}


  if (account.email)
    div(class="mb-4") <b> Email : </b> #{account.email}

  if (account.phone)
    div(class="mb-4") <b>Số điện thoại :</b> #{account.phone}
  if (account.avatar)
    div(class="mb-4")
      img(
        src=account.avatar
        style="width: 100px"
      )
  if (account.status)
    div(class="mb-4")
      b Trạng thái:
      if (account.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng Hoạt động

  a(
    href=`${prefixAdmin}/accounts/edit/${account.id}`
    class="btn btn-warning"
    ) Chỉnh sửa

  script(src="/admin/js/product.js")
