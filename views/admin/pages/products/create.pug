extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

  +alert-error(5000)

  h1(class="mb-4") Thêm mới sản phẩm 

  form( action=`${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
        )

    .form-group
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    
    .form-group
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      )

    .form-group
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="0"
        min="0"
      )
    
    .form-group
      label(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value="0"
        min="0"
      )
    
    .form-group
      label(for="stock") Số lượng
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value="1"
      )
    
    div(class="form-group"
          upload-image
    )
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class="image-preview"
      )
      button(class="btn btn-danger"
      type="button"
        data-btn-x-preview
      ) X
    .form-group
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )

    .form-group      
      .form-group.form-check.form-check-inline
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      
      .form-group.form-check.form-check-inline
        input(
          type="radio"
          class="form-check-input"
          id="statusInactive"
          name="status"
          value="inactive"
        )
        label(for="statusInactive" class="form-check-label") Dừng hoạt động
    
    .form-group.mt-3
      button.btn.btn-primary(type="submit") Lưu

  script(src="/admin/js/product.js")
